#include "include.h"
#include "FSM/FSM.h"
void Systick_Handler(void){
    if(ledTimer>0){
        ledTimer--;
    }
    if(redCounter==0){
        redCounter = 50;
        redFlag = 1;
    }
    else{
        redCounter--;
    }
    if(greenCounter==0){
        greenCounter = 50;
        greenFlag = 1;
    }
    else{
        greenCounter--;
    }
    if(redFlag){
        redFlag = 0;
        ledRedStateMachineUpdate();
    }
    if(greenFlag){
        greenFlag = 0;
        ledGreenStateMachineUpdate();
    }
}
int main(void){
    SysCtlClockSet(SYSCTL_SYSDIV_2_5|SYSCTL_USE_PLL|SYSCTL_XTAL_16MHZ|SYSCTL_OSC_MAIN);
    PortF_Init();

    while(1){

    }
}

